@model EmployeeCrudApp.Models.Employee
@{
    ViewBag.Title = "Delete Employee";
}

<h2>Delete Employee</h2>

<div>
    <p>Are you sure you want to delete this employee?</p>

    <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Position:</dt>
        <dd>@Model.Position</dd>
        <dt>Office:</dt>
        <dd>@Model.Office</dd>
        <dt>Salary:</dt>
        <dd>@Model.Salary</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Employee", new { id = Model.Id }, FormMethod.Post))
    {
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>